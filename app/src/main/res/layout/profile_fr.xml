<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TV_ChangePass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:text=""
                    android:textColor="@color/brown"
                    android:textSize="@dimen/title"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/pencil"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:background="@drawable/dark_circle_button"
                    android:foregroundTint="@color/colorPrimary"
                    android:padding="7dp"
                    android:src="@drawable/forget_pass_icon" />

                <ImageView
                    android:id="@+id/IV_deactiveaccount"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:background="@drawable/dark_circle_button"
                    android:foregroundTint="@color/colorPrimary"
                    android:padding="6dp"
                    android:src="@drawable/deactive_icon" />

                <ImageView
                    android:id="@+id/IV_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/delete_user_icon"

                    android:padding="6dp" />


            </LinearLayout>

            <ScrollView
                android:id="@+id/srollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginTop="10dp"
                        android:text="Username"
                        android:textColor="@color/darkgrey"
                        android:textSize="9sp"
                        android:visibility="visible" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_5dp"
                            android:layout_toLeftOf="@+id/edit_ic5"
                            android:background="@drawable/border_rectanglular"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/guard_icon"
                                android:tint="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp">


                                <EditText
                                    android:id="@+id/ET_Name"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:clickable="true"
                                    android:enabled="false"
                                    android:hint="Name"
                                    android:padding="2dp"
                                    android:paddingLeft="@dimen/margin_10dp"
                                    android:textColor="#000000"
                                    android:textColorHint="@color/darkgrey"
                                    android:textSize="@dimen/title" />
                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/edit_ic5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/edit_icon"
                            android:visibility="invisible" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginTop="10dp"
                        android:text="Phone Number"
                        android:textColor="@color/darkgrey"
                        android:textSize="9sp"
                        android:visibility="visible" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_5dp"
                            android:layout_toLeftOf="@+id/edit_ic1"
                            android:background="@drawable/border_rectanglular"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/phone"
                                android:tint="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp">


                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/TV_countrycode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_margin="5dp"
                                        android:textSize="@dimen/title" />

                                    <EditText
                                        android:id="@+id/ET_Phone"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_marginLeft="@dimen/margin_5dp"
                                        android:background="@color/white"
                                        android:clickable="true"
                                        android:drawablePadding="20dp"
                                        android:hint="(123) 456-7890"
                                        android:maxLength="10"
                                        android:singleLine="true"
                                        android:textColor="#000000"
                                        android:textColorHint="@color/darkgrey"
                                        android:textSize="@dimen/title" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/edit_ic1"
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/edit_icon" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginTop="10dp"
                        android:text="Email"
                        android:textColor="@color/darkgrey"
                        android:textSize="9sp"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_5dp"
                            android:layout_toLeftOf="@+id/edit_ic2"
                            android:background="@drawable/border_rectanglular"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/email_icon"
                                android:tint="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp">


                                <EditText
                                    android:id="@+id/ET_Mail"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:background="@color/white"
                                    android:clickable="true"
                                    android:hint="Email"
                                    android:singleLine="true"
                                    android:textColor="#000000"
                                    android:textColorHint="@color/darkgrey"
                                    android:textSize="@dimen/title" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/edit_ic2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/edit_icon" />
                    </RelativeLayout>


                    <!--=======================================================-->

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BT_Bank"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:padding="5dp"
                android:text="@string/Add_Bank_Detail"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="gone" />


            <Button
                android:id="@+id/BT_Update"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:text="Update"
                android:textColor="@android:color/white"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
