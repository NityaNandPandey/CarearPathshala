<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/margin_120dp"
            android:layout_height="@dimen/margin_120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/apk_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Contact Us"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/margin_13dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".1dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/colorPrimary"
            android:visibility="gone"></View>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Office Address"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/margin_12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Career pathshalaNo. 4, 2nd floor, Vaishali Main Road, Metro \nPillar No. 353 Near Kohat Metro Station, Pitampura, New Delhi\n Delhi 110034 India"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_13dp" />



        <!--================================================-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:padding="5dp"
                android:text="Website:"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_12dp" />

            <TextView
                android:id="@+id/UsWebsite_Url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:padding="5dp"
                android:text="@string/UsWebsite_Url"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_12dp" />
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:padding="5dp"
                android:text="India Tel:"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_12dp" />

            <TextView
                android:id="@id/indiano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:padding="5dp"
                android:text="@string/about_PhoneNo_India"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_12dp" />
        </LinearLayout>

        <!--=========================================-->




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="serif"
                android:padding="5dp"
                android:text="Services Information:"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_12dp" />

            <TextView
                android:id="@+id/serviceno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="serif"
                android:padding="5dp"
                android:text="@string/about_EmailnewContectUs"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_12dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblMobileNo"
            android:layout_marginBottom="20dp"

            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/about_Email"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/margin_12dp" />

    </LinearLayout>
</LinearLayout>