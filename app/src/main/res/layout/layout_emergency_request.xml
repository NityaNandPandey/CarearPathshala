<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_2dp"
    android:minHeight="61dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/button"
        android:visibility="gone"
        app:border_color="#000000"
        app:border_width=".5dp" />

    <Button
        android:id="@+id/BT_firstletter"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/orangecirclebutton"
        android:text="T"
        android:textColor="@color/white"
        android:textSize="@dimen/margin_14dp" />


    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/BT_firstletter"
        android:minHeight="60dp">

        <TextView
            android:id="@+id/groupmembername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="Tendulkar"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12sp" />

        <ImageView
            android:id="@+id/battery"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/groupmembername"
            android:background="@drawable/battery_icon" />

        <TextView
            android:id="@+id/batterypercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/battery"
            android:text="100%"
            android:singleLine="true"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupmembername"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:text="online status"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupmembername"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:text="5/53 Sec-2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12sp"
            android:visibility="gone" />
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/lay1"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:background="@color/darkgrey"></View>
</RelativeLayout>