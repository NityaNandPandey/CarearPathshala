<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.career.pathshala.activity.TermAndConditionsAc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:background="@color/theme_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IV_backpress"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/arrow_white_old"
            android:onClick="onclick_IVBack"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="Terms and Conditions"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <WebView
        android:id="@+id/WV_Termcondition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_10dp"

        android:scrollbars="none"></WebView>

</LinearLayout>
